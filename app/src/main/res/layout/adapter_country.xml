<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    android:paddingTop="@dimen/activity_vertically_margin"
    android:paddingBottom="@dimen/activity_vertically_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/adapter_country_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name - "
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/adapter_country_textview_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capital - "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/adapter_country_textview_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Region - "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/adapter_country_textview_nativename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native Name - "
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="0.5"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|right"
        >
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/adapter_country_button_share"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Share"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/adapter_country_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Delete"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/adapter_country_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Edit"
            />

    </LinearLayout>



</LinearLayout>